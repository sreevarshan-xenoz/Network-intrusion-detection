# Environment Configuration for Network Intrusion Detection System

# Application Environment
ENVIRONMENT=production
LOG_LEVEL=INFO

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=secure_password_here
MONGODB_URL=mongodb://admin:secure_password_here@mongodb:27017/nids?authSource=admin

# Redis Configuration
REDIS_URL=redis://redis:6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Dashboard Configuration
DASHBOARD_PORT=8501

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=secure_grafana_password
PROMETHEUS_ENABLED=true

# Network Capture Configuration
NETWORK_INTERFACE=eth0
CAPTURE_FILTER=""

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
API_RATE_LIMIT_PER_MINUTE=100

# Alert Configuration
SMTP_SERVER=localhost
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""
ALERT_EMAIL_RECIPIENTS=""

# Webhook Configuration
WEBHOOK_URL=""
WEBHOOK_TIMEOUT=10

# Model Configuration
MODEL_CACHE_SIZE=10000
MODEL_CACHE_TTL=300
MAX_CONCURRENT_REQUESTS=100

# Performance Configuration
PREDICTION_BATCH_SIZE=1000
FEATURE_EXTRACTION_TIMEOUT=5

# Development Configuration (only for development environment)
DEV_RELOAD=false
DEV_DEBUG=false